<h1>Listing Templates</h1>

<%= link_to 'New Template', new_template_path, :class => 'btn' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th colspan="11"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr data-href="<%= template_path(template) %>">
        <td><%= template.name %></td>
        <td><%= link_to 'Edit', edit_template_path(template), class: 'btn btn-mini' %>&nbsp;&nbsp;<%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' },  class: 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


