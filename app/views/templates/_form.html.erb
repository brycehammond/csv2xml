<%= simple_form_for @template, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :name, input_html: { class: 'span8' } %>
  <%= f.input :wrapper, input_html: { class: 'span8' } %>
  <%= f.input :item_template, input_html: { class: 'span8' } %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
