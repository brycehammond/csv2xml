<head>
<title>csv2xml</title>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<%= csrf_meta_tags %>
<%= stylesheet_link_tag    'application', media: 'all' %>
<%= javascript_include_tag 'application' %>
<%= javascript_include_tag :modernizr %>
</head>
<body>

<div class="container">
  <div class="navbar">
    <div class="navbar-inner">
      <%= link_to "csv2xml", templates_path, class: 'brand' %>
      <ul class="nav">
        <%= nav_link_to 'Templates',      templates_path %>
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
  <%= yield %>
</div>

</body>
</html>